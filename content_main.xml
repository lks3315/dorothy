<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <WebView
                    android:id="@+id/Wv_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0px"
                    android:layout_margin="0px"></WebView>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="83dp"
                    android:background="@mipmap/maintext"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#EAEAEA"
                android:layout_margin="3dp"
                android:layout_marginTop="0dp">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="6">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginRight="0.5dp">
                        <ImageButton
                            android:id="@+id/img_btn_mobileid"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@mipmap/mobile_id"
                            android:layout_gravity="bottom"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginRight="0.5dp">
                        <ImageButton
                            android:id="@+id/img_btn_introductuon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@mipmap/introductuon"
                            android:layout_gravity="bottom"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/img_btn_e_information"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@mipmap/e_information"
                            android:layout_gravity="bottom" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="모바일 학생증"
                        android:gravity="center_horizontal"
                        android:background="#ffffff"
                        android:layout_marginBottom="0.5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="대학소개"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="e학사정보"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/img_btn_graduation"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@mipmap/graduation"
                            android:layout_gravity="bottom"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/img_btn_map"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@mipmap/map"
                            android:layout_gravity="bottom"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/img_btn_bus"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@mipmap/bus"
                            android:layout_gravity="bottom" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="졸업학점"
                        android:gravity="center_horizontal"
                        android:background="#ffffff"
                        android:layout_marginBottom="0.5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="캠퍼스맵"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="셔틀버스"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/img_btn_schedule"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@mipmap/schedule"
                            android:layout_gravity="bottom"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/img_btn_call"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@mipmap/call"
                            android:layout_gravity="bottom"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/img_btn_library"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@mipmap/library"
                            android:layout_gravity="bottom" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="학사일정"
                        android:gravity="center_horizontal"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="전화번호"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="도서관"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"/>


                </GridLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
